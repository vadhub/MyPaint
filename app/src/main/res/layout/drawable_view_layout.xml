<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shader="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/draw_action_layout"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/draw_canceled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cancel_background"
            app:srcCompat="@drawable/ic_clear_white_24dp" />

        <ImageButton
            android:id="@+id/draw_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/record_background"
            app:srcCompat="@drawable/ic_check_white" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/canvas_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <ImageView
            android:id="@+id/onDone_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="false" />

        <com.abg.mypaint.color.ColorPicker
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="64dip"
            android:layout_marginEnd="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="30dip"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="64dip"
            android:layout_marginEnd="55dip"
            android:layout_marginRight="55dip"
            android:layout_marginBottom="30dip"
            android:paddingBottom="5dip"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/brush_option_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Neon"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Fade"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="35dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Glow"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="35dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Blur"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="45dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Paint1"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="45dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Paint2"
                        android:textColor="#ff00cc"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dip"
                    android:layout_height="40dip"
                    android:orientation="horizontal">


                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/normal_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="normal"
                        shader:mask_radius="14" />

                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/inner_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="neon"
                        shader:mask_radius="14" />

                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/neon_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="inner"
                        shader:mask_radius="14"

                        />

                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/blur_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="blur"
                        shader:mask_radius="14" />

                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/emboss_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="emboss"
                        shader:mask_radius="14" />

                    <com.abg.mypaint.painview.ShaderTextView
                        android:id="@+id/deboss_brush"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_ripple"
                        android:gravity="center"
                        android:text="i"
                        android:textColor="#ff00cc"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        shader:mask_id="deboss"
                        shader:mask_radius="14" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/undo_frame"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/stroke_width_layout"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginStart="50dip"
                android:layout_marginLeft="50dip"
                android:layout_marginEnd="106dip"
                android:layout_marginRight="106dip"
                android:background="@drawable/brushes_background"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stroke_width_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Brush Width:14"
                    android:textColor="#e04800"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/stroke_width_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="14" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/show_stroke_bar"
                android:layout_width="36dip"
                android:layout_height="48dip"
                android:layout_gravity="end"
                android:layout_marginEnd="60dip"
                android:layout_marginRight="60dip"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_gestures" />

            <ImageButton
                android:id="@+id/undo_btn"
                android:layout_width="36dip"
                android:layout_height="48dip"
                android:layout_gravity="end"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_undo" />

        </FrameLayout>

    </FrameLayout>
</FrameLayout>